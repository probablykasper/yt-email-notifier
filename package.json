{
  "name": "youtube-email-notifier",
  "version": "1.1.0",
  "author": "Kasper Henningsen (https://kasper.space)",
  "main": "main.js",
  "bin": "main.js",
  "scripts": {
    "lint": "eslint --ext .js --ignore-path .eslintignore .",
    "lint-fix": "eslint --ext .js --ignore-path .eslintignore . --fix",
    "start": "APP_ENV=dev node main.js",
    "start:prod": "node main.js",
    "compile": "pkg . --target macos --output dist/youtube-email-notifier",
    "build": "pkg . --target macos --output dist/youtube-email-notifier && embler",
    "pack": "embler"
  },
  "pkg": {
    "assets": [
      "web/**/*"
    ]
  },
  "embler": {
    "realName": "YouTube Email Notifier",
    "appId": "space.kasper.youtube-email-notifier",
    "outputDir": "dist",
    "backgroundApp": true,
    "mac": {
      "binary": "dist/youtube-email-notifier",
      "category": "public.app-category.utilities",
      "icon": "assets/logo.png",
      "formats": [
        "app",
        "dmg"
      ],
      "customInfo": {}
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "body-parser": "^1.19.0",
    "connect": "^3.7.0",
    "display-notification": "^2.0.0",
    "iso8601-duration": "^1.2.0",
    "log4js": "^6.3.0",
    "nedb": "^1.8.0",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.11",
    "opener": "^1.5.1",
    "p-limit": "^3.0.2",
    "serve-static": "^1.14.1",
    "systray": "^1.0.5",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "embler": "^1.0.0",
    "eslint": "^7.7.0",
    "pkg": "^4.4.9"
  }
}
