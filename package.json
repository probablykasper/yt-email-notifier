{
  "name": "youtube-email-notifier",
  "version": "1.0.0",
  "author": "Kasper Henningsen (https://kasper.space)",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "compile": "pkg . --target macos --output dist/youtube-email-notifier-bin-macos",
    "build": "pkg . --target macos --output dist/youtube-email-notifier-bin-macos && pakager",
    "pack": "pakager"
  },
  "pakager": {
    "realName": "YouTube Email Notifier",
    "appId": "space.kasper.youtube-email-notifier",
    "outputDir": "dist",
    "backgroundApp": true,
    "mac": {
      "binary": "dist/youtube-email-notifier-bin-macos",
      "category": "public.app-category.utilities",
      "icon": "assets/logo.png",
      "formats": [
        "app"
      ],
      "customInfo": {}
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect": "^3.7.0",
    "eslint": "^7.7.0",
    "node-fetch": "^2.6.0",
    "openurl": "^1.1.1",
    "serve-static": "^1.14.1",
    "systray": "^1.0.5",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "pakager": "file:../pakager",
    "pkg": "^4.4.9"
  }
}
